{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HeliosEvents",
  "type": "object",
  "required": [
    "schema_version",
    "generated_at",
    "events",
    "tasks"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "category",
          "severity",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "severity": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "domain": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "time_window": {
            "type": "object"
          },
          "entities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "sources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "event_id",
          "action"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "event_id": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "assignee_domain": {
            "type": "string"
          },
          "priority": {
            "type": "integer"
          },
          "rationale": {
            "type": "string"
          },
          "confidence": {
            "type": "number"
          }
        }
      }
    }
  }
}